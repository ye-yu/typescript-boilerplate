{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "node bin/esbuild.dist.mjs",
    "build:dev": "node bin/esbuild.dev.mjs",
    "pretest": "npm run build:dev",
    "test": "bash bin/test ",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bash bin/run"
  },
  "devDependencies": {
    "@types/node": "^20.3.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.18.1",
    "esbuild-plugin-tsc": "^0.4.0",
    "glob": "^10.2.7",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
